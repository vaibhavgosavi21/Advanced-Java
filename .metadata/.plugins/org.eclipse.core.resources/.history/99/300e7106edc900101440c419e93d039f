package hibernate2;

import java.util.Scanner;

import com.mysql.cj.x.protobuf.MysqlxConnection.Close;
import com.mysql.cj.x.protobuf.MysqlxCursor.Open;

import jakarta.persistence.EntityManager;
import jakarta.persistence.EntityManagerFactory;
import jakarta.persistence.EntityTransaction;
import jakarta.persistence.Persistence;

public class StudentDAO {
	
	private static EntityManagerFactory factory;
	private static EntityManager manager;
	private static EntityTransaction transaction;
	
	public static void OpenConnection() {
		factory=Persistence.createEntityManagerFactory("Hibernate2");
		manager=factory.createEntityManager();
		transaction= manager.getTransaction();
	}
	
	public static void CloseConnection() {
		if(factory!=null) {
			factory.close();
		}
		if(manager!=null) {
			manager.close();
		}
		if(transaction.isActive()) {
			transaction.rollback();
		}
	}
	
	public static void main(String[] args) {
		
		Scanner sc=new Scanner(System.in);
		System.out.println("--------- Hibernate CRUD operation ---------");
		System.out.println("\n1. Add new Student details");
		System.out.println("\n1. Update  Student details");
		System.out.println("\n1. Delete  Student details");
		System.out.println("\n1. Show  Student details");
		System.out.println("\n Enter your choice");
		int ch=sc.nextInt();
		switch(ch){
		case 1->{
				System.out.println("--------- Add New Student Details ---------");
				System.out.println("Enter student roll no: ");
				int rollno=sc.nextInt();
				System.out.println("Enter Student name: ");
				String name=sc.next();
				System.out.println("Enter Student marks: ");
				double marks=sc.nextDouble();
				
				StudentDTO std=new StudentDTO(rollno,name,marks);
			
		}
			
		}


		OpenConnection();
		transaction.begin();
		
		StudentDTO std= new StudentDTO();
		std.setRollno(0);
		std.setSname(null);
		std.setMarks(0);
		
		transaction.commit();
		CloseConnection();
		
	}

}
